a, .btn-fake-link {
  color: $blue-foreground;
  text-decoration: none;
}

.arrow-link:hover:after {
  border-left-color: $blue-secondary;
}

.arrow-link.active:after {
  border-top-color: $blue-secondary;
  border-left-color: transparent;
  transform: rotate(90deg);
}

.arrow-link-before:hover:before {
  border-right-color: $blue-secondary;
}

.arrow-link-before.active:before {
  border-top-color: $blue-secondary;
  border-right-color: transparent;
  transform: rotate(90deg);
}

.zeus-footer {
  margin: auto;
  padding: .5em;
  left: 0;
  right: 0;
  width: 100%;
  max-width: 1024px;
  min-height: $footer-height;
  background-color: $blue-light;
}

.zeus-footer-left {
  color: $grey-medium;
  font-size: .8rem;
}

.skipModuleLink {
  wmzindex("header-fixed", true);
  to-rem(font-size, 16px);

  position: absolute;
  left: 12px;
  /* Reason being used display is it should not be `!important` */
  display: block;
  height: 40px;

  border-radius: 8px;
  border: 1px solid $black;
  background-color: $white;
  outline: 3px solid rgba(255, 255, 255, 0.5);
  box-shadow: 4px 4px 2px 0 rgba(34, 34, 34, 0.3);
  line-height: 38px;

  &,
  &:hover,
  &:focus,
  &:visited,
  &:active {
    color: $grey-dark;
  }
}
